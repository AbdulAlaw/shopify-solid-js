<section class="container">
  {% if section.settings.heading != blank %}
    <h1>{{ section.settings.heading }}</h1>
  {% endif %}
  <div id="cart-drawer-root" data-cart-heading="{{section.settings.heading}}" class="cart-drawer">
   
  </div>
</section>

{% schema %}
{
  "name": "Cart Drawer",
  "class": "section-header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ]

}
{% endschema %}
